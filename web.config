<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Configuraci칩n para servir archivos est치ticos correctamente -->
    <handlers>
      <add name="StaticFile" path="*" verb="*" type="System.Web.StaticFileHandler" resourceType="Either" />
    </handlers>

    <!-- Reglas de reescritura para SPA -->
    <rewrite>
      <rules>
        <!-- Redirigir todas las rutas que no sean archivos est치ticos hacia index.html -->
        <rule name="SPA fallback" stopProcessing="true">
          <match url="^(?!.*\.(js|css|jpg|jpeg|png|gif|webp|svg|ico|ttf|woff|woff2|eot|otf|json|map)$).*" />
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Configuraci칩n para iisnode si estuvieras usando Node.js (opcional) -->
    <!-- <iisnode watchedFiles="web.config;*.js;*.cjs" /> -->
  </system.webServer>
</configuration>
